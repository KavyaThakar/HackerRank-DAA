import math
import os
import random
import re
import sys

def pageCount(n, p):
    # Turns from front
    front_turns = p // 2
    # Turns from back
    back_turns = (n // 2) - (p // 2)
    return min(front_turns, back_turns)

if __name__ == '__main__':
    fptr = open(os.environ['OUTPUT_PATH'], 'w')

    n = int(input().strip())
    p = int(input().strip())

    result = pageCount(n, p)

    fptr.write(str(result) + '\n')
    fptr.close()
