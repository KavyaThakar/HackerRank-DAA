import math
import os
import random
import re
import sys

def countingValleys(steps, path):
    altitude = 0
    valleys = 0

    for step in path:
        if step == 'U':
            altitude += 1
            if altitude == 0:
                valleys += 1  # Just came up from a valley
        else:
            altitude -= 1

    return valleys

if __name__ == '__main__':
    fptr = open(os.environ['OUTPUT_PATH'], 'w')

    steps = int(input().strip())
    path = input().strip()

    result = countingValleys(steps, path)

    fptr.write(str(result) + '\n')
    fptr.close()
