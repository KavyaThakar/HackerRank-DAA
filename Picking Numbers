from collections import Counter

def pickingNumbers(a):
    freq = Counter(a)   # count frequency of each number
    max_len = 0
    for num in freq:
        max_len = max(max_len, freq[num] + freq.get(num + 1, 0))
    return max_len

if __name__ == '__main__':
    n = int(input().strip())              # first line: array length
    arr = list(map(int, input().split())) # second line: array
    print(pickingNumbers(arr))
